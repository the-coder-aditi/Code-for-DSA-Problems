#include<bits/stdc++.h>
using namespace std;



class Solution{
    public:
    // arr : given array
    // l : starting index of the array i.e 0
    // r : ending index of the array i.e size-1
    // k : find kth smallest element and return using this function
        int kthSmallest(int arr[], int l, int r, int k) {
        int res;
        sort(arr,arr+r+1); //sorting the array in ascending order using STL function
    
        res=arr[k-1];
        return res;
    }
    
};
